{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Catégories
{% endblock %}

{% block body %}
<h1>Catégorie {{ categories.name }}</h1>
<div>
    {% for program in programs %}
    <a href="{{ path('show', {id: program.id }) }}">
        <div>
            <imgsrc="" alt="">
            <h2>{{ program.title }}</h2>
            <p>{{ program.synopsis }}</p>
        </div>
    </a>
    {% else %}
    <h2>Aucune série trouvée </h2>
    {% endfor %}
</div>
{% endblock %}