{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Catégories
{% endblock %}

{% block body %}
    <ul>
        {% for category in categories %}
            <a href="/category/{{category.id}}">{{category.name}}</a>
        {% else %}
            Aucune catégorie valide
        {% endfor %}
    </ul>

{% endblock %}